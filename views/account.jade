extends layout

block content

  #main.pure-g-r
    .pure-u-1-3
      p Details
      hr
      p Your API key: <code>#{user.key}</code>
    if subjects
      .pure-u-1-3
        p Subejcts
        hr
        for subject in subjects
          a(href="subject/#{subject._id}/edit")
            h3 #{subject.name}
        a(href="subject/new")
          h4 New
    if reviews
      .pure-u-1-3
        p Reviews
        hr
        for review in reviews
          h3 #{review.title}